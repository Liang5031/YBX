<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.ResetPasswordActivity">


    <TextView
        android:id="@+id/textView"
        style="@style/TextLarge"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="重置密码" />

    <TextView
        android:id="@+id/textView2"
        style="@style/TextNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:text="通过向您个人信息中的手机号发送验证码，请确保此手机在您身边，验证码60秒内有效" />

    <Button
        style="@style/BottonNormal"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="发送验证码" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp">

        <TextView
            style="@style/TextNormal"
            android:layout_width="@dimen/Login_text_width"
            android:layout_alignParentLeft="true"
            android:text="验证码:" />

        <EditText
            android:id="@+id/verifyCode"
            style="@style/EditNormal"
            android:layout_width="@dimen/Login_edit_width"
            android:layout_alignParentRight="true"
            android:hint="验证码"
            android:inputType="number" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp">

        <TextView
            style="@style/TextNormal"
            android:layout_width="@dimen/Login_text_width"
            android:layout_alignParentLeft="true"
            android:text="导游证号 :" />

        <EditText
            android:id="@+id/account"
            style="@style/EditNormal"
            android:layout_width="@dimen/Login_edit_width"
            android:layout_alignParentRight="true"
            android:hint="导游证号"
            android:inputType="number" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp">

        <TextView
            style="@style/TextNormal"
            android:layout_width="@dimen/Login_text_width"
            android:layout_alignParentLeft="true"
            android:text="新密码:" />

        <EditText
            android:id="@+id/newPassword"
            style="@style/EditNormal"
            android:layout_width="@dimen/Login_edit_width"
            android:layout_alignParentRight="true"
            android:hint="新密码"
            android:inputType="number" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp">

        <TextView
            style="@style/TextNormal"
            android:layout_width="@dimen/Login_text_width"
            android:layout_alignParentLeft="true"
            android:text="确认密码:" />

        <EditText
            android:id="@+id/confirmPassword"
            style="@style/EditNormal"
            android:layout_width="@dimen/Login_edit_width"
            android:layout_alignParentRight="true"
            android:hint="确认密码"
            android:inputType="number" />
    </RelativeLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_height_normal"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:text="记住新密码"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <Button
        style="@style/BottonNormal"
        android:layout_width="@dimen/login_button_width"
        android:layout_gravity="center_horizontal"
        android:text="重置密码" />

</LinearLayout>
