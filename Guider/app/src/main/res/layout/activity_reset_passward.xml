<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.ResetPasswordActivity">

    <TextView
        android:id="@+id/textView2"
        style="@style/TextNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:text="@string/get_verify_code_introduction" />

    <Button
        style="@style/BottonNormal"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/send_verify_code" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp">

        <TextView
            style="@style/TextNormal"
            android:layout_width="@dimen/text_width_normal"
            android:layout_alignParentLeft="true"
            android:text="@string/verify_code" />

        <EditText
            android:id="@+id/verifyCode"
            style="@style/EditNormal"
            android:layout_width="@dimen/edit_width_normal"
            android:layout_alignParentRight="true"
            android:hint="@string/verify_code_hint" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp">

        <TextView
            style="@style/TextNormal"
            android:layout_width="@dimen/text_width_normal"
            android:layout_alignParentLeft="true"
            android:text="@string/guider_number" />

        <EditText
            android:id="@+id/account"
            style="@style/EditNormal"
            android:layout_width="@dimen/edit_width_normal"
            android:layout_alignParentRight="true"
            android:hint="@string/guider_number_hint"
            android:inputType="number" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp">

        <TextView
            style="@style/TextNormal"
            android:layout_width="@dimen/text_width_normal"
            android:layout_alignParentLeft="true"
            android:text="@string/new_password" />

        <EditText
            android:id="@+id/newPassword"
            style="@style/EditNormal"
            android:layout_width="@dimen/edit_width_normal"
            android:layout_alignParentRight="true"
            android:hint="@string/new_password_hint"
            android:inputType="textPassword" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp">

        <TextView
            style="@style/TextNormal"
            android:layout_width="@dimen/text_width_normal"
            android:layout_alignParentLeft="true"
            android:text="@string/confirm_password" />

        <EditText
            android:id="@+id/confirmPassword"
            style="@style/EditNormal"
            android:layout_width="@dimen/edit_width_normal"
            android:layout_alignParentRight="true"
            android:hint="@string/confirm_password_hint"
            android:inputType="textPassword" />
    </RelativeLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_height_normal"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:text="@string/remember_new_password"
        android:textColor="@color/textColorSecond"
        android:textSize="12sp" />

    <Button
        style="@style/BottonNormal"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/reset_password" />

</LinearLayout>
