        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="允许代我执行预约" />

        <TextView
            android:id="@+id/YYXCXK"
