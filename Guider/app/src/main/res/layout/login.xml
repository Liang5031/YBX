<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBackground"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <!--    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/logo_vertical_margin"
        android:layout_marginTop="@dimen/logo_vertical_margin"
        android:text="导游团队行程管理助手"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_horizontal_margin"
        android:layout_marginRight="@dimen/login_horizontal_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_vertical_margin"
            android:layout_marginTop="@dimen/login_vertical_margin">

            <TextView
                android:layout_width="@dimen/Login_text_width"
                android:layout_height="@dimen/Login_text_height"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="导游证号 :"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etAccount"
                android:layout_width="@dimen/Login_edit_width"
                android:layout_height="@dimen/Login_text_height"
                android:layout_alignParentRight="true"
                android:hint="导游证号"
                android:textColor="@color/white"
                android:inputType="number"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_vertical_margin">

            <TextView
                android:layout_width="@dimen/Login_text_width"
                android:layout_height="@dimen/Login_text_height"
                android:gravity="center_vertical"
                android:text="密码 :"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/etPassword"
                android:layout_width="@dimen/Login_edit_width"
                android:layout_height="@dimen/Login_text_height"
                android:layout_alignParentRight="true"
                android:hint="密码"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Login_text_height"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="记住密码"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Login_text_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="忘记密码"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/login_vertical_margin"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/login_button_width"
                android:layout_height="@dimen/login_button_height"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:layout_width="@dimen/login_button_width"
                android:layout_height="@dimen/login_button_height"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/logo_vertical_margin"
            android:text="长沙蕾欧娜信息科技有限公司"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="保留所有权利"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
