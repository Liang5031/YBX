<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBackground"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <!--    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/logo_vertical_margin"
        android:layout_marginTop="@dimen/logo_vertical_margin"
        android:text="导游团队行程管理助手"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_horizontal_margin"
        android:layout_marginRight="@dimen/login_horizontal_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_vertical_margin"
            android:layout_marginTop="@dimen/login_vertical_margin">

            <TextView
                style="@style/TextNormal"
                android:layout_width="@dimen/Login_text_width"
                android:layout_alignParentLeft="true"
                android:text="导游证号 :" />

            <EditText
                android:id="@+id/etAccount"
                style="@style/EditNormal"
                android:layout_width="@dimen/Login_edit_width"
                android:layout_alignParentRight="true"
                android:hint="导游证号"
                android:inputType="number" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_vertical_margin">

            <TextView
                style="@style/TextNormal"
                android:layout_width="@dimen/Login_text_width"
                android:layout_alignParentLeft="true"
                android:text="密码 :" />


            <EditText
                android:id="@+id/etPassword"
                style="@style/EditNormal"
                android:layout_width="@dimen/Login_edit_width"
                android:layout_alignParentRight="true"
                android:hint="密码"
                android:inputType="textPassword" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/login_vertical_margin"
            android:orientation="horizontal">

            <CheckBox
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="记住密码" />

            <TextView
                android:id="@+id/tvFogotPassword"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:onClick="onClickForgot"
                android:text="忘记密码？" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_vertical_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSignUp"
                style="@style/BottonNormal"
                android:layout_width="@dimen/login_button_width"
                android:layout_alignParentLeft="true"
                android:text="注册" />

            <Button
                android:id="@+id/btnLogin"
                style="@style/BottonNormal"
                android:layout_width="@dimen/login_button_width"
                android:layout_alignParentRight="true"
                android:text="登录" />

        </RelativeLayout>

        <TextView
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/logo_vertical_margin"
            android:text="长沙蕾欧娜信息科技有限公司" />

        <TextView
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="保留所有权利" />
    </LinearLayout>
</LinearLayout>
